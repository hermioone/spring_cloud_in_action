<?xml version="1.0" encoding="UTF-8"?>
<configuration status="off" monitorInterval="30">
    <appenders>
        <console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy.MM.dd HH:mm:ss}] [%t] - %l %n [%p] - %m%n%n"/>
        </console>
    </appenders>

    <loggers>

        <!--<logger name="org.springframework" level="error"/>          &lt;!&ndash; 过滤掉hibernate的error以下级别的日志 &ndash;&gt;-->
        <logger name="com.imooc" level="debug" />
        <Root level="error">
            <appenderref ref="Console" />
        </Root>
    </loggers>

</configuration>